-- get tracks for playlists containing the specified term
-- sqlite3 --readonly "$HOME/playlister.db" ".param set :term $term" ".read get_playlist_tracks.sqlite"
.headers on
.mode column

select
  p.id as playlist_id,
  snapshot_id,
  p.name as playlist,
  pt.added_at,
  pt.track_id,
  pt.playlist_snapshot_id,
  pt.track_id,
  t.name as track
from
  Playlist p
  join PlaylistTrack pt on p.id = pt.playlist_id
  join Track t on t.id = pt.track_id
where
  p.name like format('%%%s%%', :searchTerm)
order by
  pt.added_at

.headers off
